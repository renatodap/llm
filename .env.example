# OpenRouter API Key (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Toggle between mock and real OpenRouter API calls
# Default: false (uses mock responses)
# Set to "true" or "1" to enable real AI responses
USE_REAL_LLM=false

# Optional: Override default model
# LLM_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Optional: Override base URL
# LLM_BASE_URL=https://openrouter.ai/api/v1

# Optional: Search API key for web search tool
# SEARCH_API_KEY=your_search_api_key

# Optional: Image API key for image generation
# IMAGE_API_KEY=your_image_api_key
